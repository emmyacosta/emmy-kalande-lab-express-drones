<h1>Available drones</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Propellers</th>
      <th scope="col">Max Speed</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
 {{#each drones}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.propellers}}</td>
      <td>{{this.maxSpeed}}</td>
      <td>
        <form action="/drones/{{this._id}}/edit">
          <div class="mb-3">
           <button class="btn btn-primary" type="submit" >EDIT</button>
          </div>
        </form>
      </td>
      <td>
        <form method="POST" action="/drones/{{this._id}}/delete">
          <div class="mb-3">
          <button class="btn btn-primary" type="submit" >DELETE</button>
         </div>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

